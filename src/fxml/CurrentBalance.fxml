<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane maxHeight="150.0" maxWidth="300.0" minHeight="150.0" minWidth="300.0" prefHeight="150.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CurrentBalanceController">
   <top>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Current Balance" BorderPane.alignment="CENTER">
         <font>
            <Font size="32.0" />
         </font>
      </Text>
   </top>
   <bottom>
      <Button fx:id="btnBack" mnemonicParsing="false" onAction="#handleBackButtonAction" text="Back" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
   <center>
      <TextField fx:id="txtBalance" editable="false" maxWidth="100.0" minWidth="100.0" prefHeight="25.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
